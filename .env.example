# Epic News Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8000
DB_PATH=/app/db
DATA_PATH=/app/data
OUTPUT_PATH=/app/output

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ADDRESS=0.0.0.0
API_URL=http://api:8000

# =============================================================================
# LLM CONFIGURATION (Required)
# =============================================================================

# OpenRouter - Primary LLM Provider
# Get key at: https://openrouter.ai
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
MODEL=openrouter/google/gemini-2.0-flash-001

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=

# Timeout Configuration (seconds)
LLM_TIMEOUT_QUICK=120
LLM_TIMEOUT_DEFAULT=300
LLM_TIMEOUT_LONG=600

# Crew Configuration
CREW_MAX_ITER=5
CREW_MAX_RPM=20

# =============================================================================
# SEARCH PROVIDERS (At least one required)
# =============================================================================

# Perplexity - Primary AI Search (Recommended)
# Get key at: https://perplexity.ai
PERPLEXITY_API_KEY=

# Serper.dev - Google Search Fallback
# Get key at: https://serper.dev (2,500 free/month)
SERPER_API_KEY=

# Brave Search - Alternative
# Get key at: https://brave.com/search/api (2,000 free/month)
BRAVE_API_KEY=

# Tavily - Research Search
# Get key at: https://tavily.com (1,000 free/month)
TAVILY_API_KEY=

# SerpAPI - Multi-engine Search
# Get key at: https://serpapi.com (100 free/month)
SERPAPI_API_KEY=

# =============================================================================
# WEB SCRAPING (One required)
# =============================================================================

# ScrapeNinja via RapidAPI (Default)
# Get key at: https://rapidapi.com
RAPIDAPI_KEY=

# Firecrawl - Alternative Scraper
# Get key at: https://firecrawl.dev (500 free/month)
FIRECRAWL_API_KEY=

# Select scraper provider: "scrapeninja" (default) or "firecrawl"
WEB_SCRAPER_PROVIDER=scrapeninja

# =============================================================================
# FINANCIAL DATA (Optional)
# =============================================================================

# Alpha Vantage - Stock Fundamentals
# Get key at: https://alphavantage.co (25 free/day)
ALPHA_VANTAGE_API_KEY=

# CoinMarketCap - Crypto Data
# Get key at: https://coinmarketcap.com/api (333 free/day)
X-CMC_PRO_API_KEY=

# Open Exchange Rates - Currency Conversion
# Get key at: https://openexchangerates.org (1,000 free/month)
OPENEXCHANGERATES_API_KEY=

# Kraken - Crypto Exchange
# Get key at: https://kraken.com
KRAKEN_API_KEY=
KRAKEN_PRIVATE_KEY=

# =============================================================================
# LOCATION & WEATHER (Optional)
# =============================================================================

# AccuWeather
# Get key at: https://developer.accuweather.com (50 free/day)
ACCUWEATHER_API_KEY=

# Geoapify - Place Search
# Get key at: https://geoapify.com (3,000 free/day)
GEOAPIFY_API_KEY=

# =============================================================================
# BUSINESS INTELLIGENCE (Optional)
# =============================================================================

# Hunter.io - Email Finding
# Get key at: https://hunter.io (25 free/month)
HUNTER_API_KEY=

# GitHub - Repository Data
# Get token at: https://github.com/settings/tokens
GITHUB_TOKEN=

# =============================================================================
# PRODUCTIVITY (Optional)
# =============================================================================

# Airtable
# Get key at: https://airtable.com/account
AIRTABLE_API_KEY=

# Todoist
# Get key at: https://todoist.com/app/settings/integrations
TODOIST_API_KEY=

# Composio - Tool Integrations
# Get key at: https://composio.dev
COMPOSIO_API_KEY=

# =============================================================================
# FACT CHECKING (Optional)
# =============================================================================

# Google Fact Check API
# Get key at: https://console.cloud.google.com
GOOGLE_API_KEY=

# =============================================================================
# EMAIL (Optional - for PostCrew)
# =============================================================================

# Gmail SMTP (if using email sending)
GMAIL_USER=
GMAIL_APP_PASSWORD=
